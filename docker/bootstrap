#!/bin/bash

set -e


# Setting up cronjob...
echo ">>> Setting up cronjob..."
#ls -la /etc/cron.d
cat /etc/*-release
echo "*/1 * * * * root bash /code/cronjobs/pollmarkets >> /var/log/cron.log 2>&1" > /etc/cron.d/pollmarkets

# Migrate database
echo ">>> Migrating database..."
python manage.py migrate

# Run server
echo ">>> Starting server..."
python manage.py runserver 0.0.0.0:8000
